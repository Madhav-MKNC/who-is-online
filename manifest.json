{
    "manifest_version": 3,
    "name": "Who is Online",
    "version": "1.0",
    "description": "Detects the site the user is on.",
    "permissions": [
        "activeTab"
    ],
    "action": {
        "default_icon": "icons/icon.png",
        "default_popup": "pages/popup.html"
    },
    "icons": {
        "24": "icons/icon24.png",
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "64": "icons/icon64.png",
        "72": "icons/icon72.png",
        "80": "icons/icon80.png",
        "96": "icons/icon96.png",
        "128": "icons/icon128.png",
        "256": "icons/icon256.png"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content_scripts/content.js"
            ]
        }
    ],
    "background": {
        "service_worker": "background/background.js"
    }
}